<component name="HomeScene" extends="Scene" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<script type = "text/brightscript" uri = "pkg:/components/HomeScene.brs" />
	<script type = "text/brightscript" uri = "pkg:/components/CountriesContent.brs" />
	
	<children>
	<!-- consider using m.top.backgroundURI -->
		<poster id="mainPoster"
			width="1920"
			height="1080"
			opacity="1.0"
			loadSync="true"
		translation="[0,0]"/>

		<video id = "channelVideo" 
			width	=	"1920"
			height	=	"1080" 
			visible = 	"false" />

		<!-- Fade in / fade out animations -->
		<Animation id="mainPosterDisappear"
			duration="1.0"
			repeat="false"
			easeFunction="linear">
			<FloatFieldInterpolator
				key="[0.0, 1.0]"    
				keyValue="[ 1.0, 0.0 ]"       
				fieldToInterp="mainPoster.opacity" />
		</Animation>
		<Animation id="mainPosterAppear"
			duration="1.0"
			repeat="false"
			easeFunction="linear">
			<FloatFieldInterpolator
				key="[0.0, 1.0]"    
				keyValue="[ 0.0, 1.0 ]"       
				fieldToInterp="mainPoster.opacity" />
		</Animation>
		<!-- End: Fade in / fade out animations -->

		<Timer
			id="mainPosterTimer"
			repeat="true"
			duration="10"
		/>

		<ChannelNameFlagAndScroll 
			id = "channelInfoPosterCompact"
			translation = "[50, 400]"
			width = "500"
			height = "350"
			clippingRect = "[0.0, 0.0, 500, 350]"
			color = "0x000000"
			inheritParentOpacity = "false"
			opacity = "0.85"
		/>

		<Rectangle
			id = "BottomBar"
			translation = "[0,0]"
			width = "1920"
			height = "1080"
			color = "0x000000FF"
			opacity = "0.7">
			<ChannelsGrid
				id  = "channelsGrid"
				itemComponentName = "RowListItems"
				translation = "[0, 0]"
				numRows = "5"
				rowItemSize = "[[267,150]]"
				rowItemSpacing = "[[30,0]]"
				itemSize = "[1920,300]"
				rowFocusAnimationStyle = "floatingFocus"
				country = "" />
		</Rectangle>
	</children>
</component>
