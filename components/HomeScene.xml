<component name="HomeScene" extends="Scene" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<script type = "text/brightscript" uri = "pkg:/components/HomeScene.brs" />	
	<script type = "text/brightscript" uri = "pkg:/components/Config.brs"/>
	
	<children>
			<poster 
				id="visibleMainPoster"
				width="0.0"
				height="0.0"
				translation="[0,0]"/>
			<poster 
				id="nextMainPoster"
				width="0.0"
				height="0.0"
				translation="[1920,0]"/>
			<ParallelAnimation id="mainPosterAnimations">
				<Animation id = "visibleMainPosterAnimation"
					repeat = "false"
					duration = ".75"
					easeFunction = "linear">
					<Vector2DFieldInterpolator
						key = "[0,1]"
						keyValue = "[[0,0],[-1920,0]]"
						fieldToInterp="visibleMainPoster.translation"
					/>
				</Animation>
				<Animation id = "nextMainPosterAnimation"
					repeat = "false"
					duration = ".75"
					easeFunction = "linear">
					<Vector2DFieldInterpolator
						key = "[0,1]"
						keyValue = "[[1920,0],[0,0]]"
						fieldToInterp="nextMainPoster.translation"
					/>
				</Animation>
			</ParallelAnimation>
		<Timer
			id="mainPostersTimer"
			repeat="true"
			duration="6"
		/>
	</children>
</component>
