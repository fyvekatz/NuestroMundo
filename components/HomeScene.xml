<component name="HomeScene" extends="Scene" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<script type = "text/brightscript" uri = "pkg:/components/HomeScene.brs" />
	<script type = "text/brightscript" uri = "pkg:/components/CountriesContent.brs" />
	
	<children>
		<poster id="mainPoster"
			width="1920"
			height="1080"
			opacity="1.0"
			loadSync="true"
		translation="[0,0]"/>

		<video id = "channelVideo" 
			width	=	"1920"
			height	=	"1080" 
			visible = 	"false" />

		<!-- Fade in / fade out animations -->
		<Animation id="mainPosterDisappear"
			duration="1.0"
			repeat="false"
			easeFunction="linear">
			<FloatFieldInterpolator
				key="[0.0, 1.0]"    
				keyValue="[ 1.0, 0.0 ]"       
				fieldToInterp="mainPoster.opacity" />
		</Animation>
		<Animation id="mainPosterAppear"
			duration="1.0"
			repeat="false"
			easeFunction="linear">
			<FloatFieldInterpolator
				key="[0.0, 1.0]"    
				keyValue="[ 0.0, 1.0 ]"       
				fieldToInterp="mainPoster.opacity" />
		</Animation>
		<!-- End: Fade in / fade out animations -->

		<Timer
			id="mainPosterTimer"
			repeat="true"
			duration="10"
		/>

		<!--<ChannelNameFlagAndScroll 
			id = "channelInfoPosterCompact"
			translation = "[25, 300]"
			width = "500"
			height = "350"
			clippingRect = "[0.0, 0.0, 500, 350]"
			color = "0x000000"
			inheritParentOpacity = "false"
			opacity = "0.85"
			visible="false"
		/>-->

		<Rectangle
			id = "featuredChannelsBottomBar"
			translation = "[0,810]"
			width = "1920"
			height = "270"
			color = "0x000000FF"
			opacity = "0.7">
			<FeaturedChannelsGrid
				id  = "featuredChannelsGrid"
				itemComponentName = "RowListItems"
				translation = "[0, 0]"
				numRows = "1"
				rowItemSize = "[[356,200]]"
				rowItemSpacing = "[[15,0]]"
				itemSize = "[1920,300]"
				rowFocusAnimationStyle = "floatingFocus"
				rowLabelOffset = "[[10,10]]"
				rowCounterRightOffset = "10"
				rowLabelFont = "font:LargeBoldSystemFont"
				showRowLabel = "[true]"
				showRowCounter = "[true]"
				country = "Costa Rica" />
		</Rectangle>

		<Rectangle
			id = "tvGuideBar"
			translation = "[0,1080]"
			width = "1920"
			height = "1080"
			color = "0x000000FF"
			opacity = "0.7">
			<TvGuideGrid
				id  = "tvGuideGrid"
				itemComponentName = "RowListItems"
				translation = "[0, 0]"
				rowItemSize = "[[384,216]]"
				itemSize = "[1920,216]"
				rowFocusAnimationStyle = "floatingFocus"
				country = "Costa Rica" />
		</Rectangle>

		<SequentialAnimation id="featuredChannelsToTvGuideAnimation">
			<Animation id="hideFeaturedChannelsAnimation"
					duration="0.375"
					repeat="false"
					easeFunction="linear">
					<Vector2DFieldInterpolator
						key="[0.0, 1.0]"
						keyValue="[ [0,810], [0, 1080] ]"
						fieldToInterp="featuredChannelsBottomBar.translation"   />
			</Animation>
			<Animation
					duration="1.125"
					repeat="false"
					easeFunction="linear">
					<Vector2DFieldInterpolator
						key="[0.0, 1.0]"
						keyValue="[ [0,1080], [0, 270] ]"
						fieldToInterp="tvGuideBar.translation"   />
			</Animation>
		</SequentialAnimation>

		<SequentialAnimation id="tvGuideToFeaturedChannelsAnimation">
			<Animation id="minimizeTvGuideAnimation"
					duration="1.125"
					repeat="false"
					easeFunction="linear">
					<Vector2DFieldInterpolator
						key="[0.0, 1.0]"
						keyValue="[ [0, 270], [0,1080] ]"
						fieldToInterp="tvGuideBar.translation"   />
			</Animation>
			<Animation id = "showFeaturedChannelsAnimation"
					duration="0.375"
					repeat="false"
					easeFunction="linear">
					<Vector2DFieldInterpolator
						key="[0.0, 1.0]"
						keyValue="[ [0, 1080], [0,810] ]"
						fieldToInterp="featuredChannelsBottomBar.translation"   />
			</Animation>
		</SequentialAnimation>

		<Timer
			id="bottomBarTimeoutTimer"
			repeat="false"
			duration="7"
		/>
	</children>
</component>
