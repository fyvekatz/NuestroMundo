<component name="HomeScene" extends="Scene" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<script type = "text/brightscript" uri = "pkg:/components/HomeScene.brs" />	
	<script type = "text/brightscript" uri = "pkg:/components/Config.brs"/>
	
	<children>
		<poster id="mainPoster"
			width="0.0"
			height="0.0"
			opacity="1.0"
			loadSync="true"
		translation="[0,0]"/>
		<Animation id="mainPosterDisappear"
			duration="1.0"
			repeat="false"
			easeFunction="linear">
			<FloatFieldInterpolator
				key="[0.0, 1.0]"    
				keyValue="[ 1.0, 0.0 ]"       
				fieldToInterp="mainPoster.opacity" />
		</Animation>
		<Animation id="mainPosterAppear"
			duration="1.0"
			repeat="false"
			easeFunction="linear">
			<FloatFieldInterpolator
				key="[0.0, 1.0]"    
				keyValue="[ 0.0, 1.0 ]"       
				fieldToInterp="mainPoster.opacity" />
		</Animation>
		<Timer
			id="mainPosterTimer"
			repeat="true"
			duration="10"
		/>
	</children>
</component>
