<!-- This component will create a ScrollingLabel node example -->
<component name="ScrollingLabelExample" extends="Group" initialFocus="exampleScrollingLabel" >

  <script type="text/brightscript" uri="pkg:/components/Typography/ScrollingLabel/ScrollingLabelExample.brs" />

  <children>

    <!--
      A ScrollingLabel component.

      For this example, we will set a width on the ScrollingLabel
      object that is shorter than the length of the text to
      demonstrate the behavior of the ScrollingLabel.
    -->
    <ScrollingLabel 
      id="exampleScrollingLabel" 
      maxWidth="300" 
      height="0" 
      font="font:MediumBoldSystemFont" 
      text="Roku now offers Nielsen audience measurement software on the Roku platform. You may choose to turn on these Nielsen audience measurement features in your channel." 
      horizAlign="left" 
      vertAlign="top" />

  </children>

</component>
